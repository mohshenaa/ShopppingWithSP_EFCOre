    }



    .login-section {
        min-height: calc(100vh - 76px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .login-container {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 40px;
        width: 100%;
        max-width: 450px;
    }

    .form-label {
        font-weight: 600;
        color: black;
        margin-bottom: 8px;
    }

    .form-control {
        border: 1px solid;
        border-radius: 8px;
        padding: 12px 15px;
        margin-bottom: 5px;
    }

        .form-control:hover {
            box-shadow: 0 0 0 0.25rem goldenrod;
        }

    .form-check {
        margin-top: 10px;
    }

    .btn-login {
        /*   background-color: deeppink;
            border-color: mediumvioletred; */
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 8px;
        color: black;
        width: 100%;
    }

        .btn-login:hover {
            background-color: goldenrod;
            border-color: black;
        }

    .btn-register {
        /*  background-color: deeppink;
            border-color: mediumvioletred; */
        color: black;
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 8px;
        width: 100%;
    }

        .btn-register:hover {
            background-color: goldenrod;
